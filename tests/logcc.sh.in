top_builddir="@top_builddir@"
srcdir="@srcdir@"
builddir="@builddir@"

vg_cmd="valgrind --track-origins=yes --leak-check=full --show-leak-kinds=all"
vg_cmd="$vg_cmd --error-exitcode=3"

testcase="$1"
target="${testcase/$srcdir/$builddir}.test"

print_exec() {
	echo "Running command $@"
	exec "$@"
}

run_program() {
	if test "$VALGRIND_TESTS" = 1; then
		print_exec libtool --mode=execute $vg_cmd "$@"
	else
		print_exec "$@"
	fi
}

ext="${testcase##*.}"
if test "$ext" == "txt"; then
	run_program "$top_builddir/sidc/sidc" "$testcase" "${target}"
else
	run_program "$testcase"
fi

